class Solution {
    public int deleteGreatestValue(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;

        // Sort each row so that largest values are at the end
        for (int i = 0; i < m; i++) {
            Arrays.sort(grid[i]);
        }

        int ans = 0;

        // From last column â†’ first column
        for (int col = n - 1; col >= 0; col--) {
            int maxVal = 0;

            // Find max in this column across all rows
            for (int row = 0; row < m; row++) {
                maxVal = Math.max(maxVal, grid[row][col]);
            }

            ans += maxVal;
        }

        return ans;
    }
}
