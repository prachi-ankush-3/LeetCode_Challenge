import java.util.*;

class Solution {
    public int maxProductDifference(int[] nums) {
        Arrays.sort(nums);  // sort the array in ascending order
        int n = nums.length;
        int maxProduct = nums[n - 1] * nums[n - 2]; // largest two numbers
        int minProduct = nums[0] * nums[1];         // smallest two numbers
        return maxProduct - minProduct;             // difference
    }
}
